@model SalesWebMvc.Models.Seller;
<!--model SalesWebMvc.Models.Seller: para reconhecer os atributos Name,Email...-->
@{
    ViewData["Title"] = "Create";
}
<h2>@ViewData["Title"]</h2>
<h4>Seller</h4>
<hr /> <!--Pular Linha-->
<div class="row">
    <!--row vai garantir a essa div vai OCUPAR A LARGURA DA TELA-->
    <div class="col-md-4">
        <!--4 ocupa 1/3 da tela, o brotstrap divide a tela em 12 partes, logo 4 é 1/3 da tela-->
        <form asp-action="Create">
            <!--qdo eu enviar o form = formulário o asp-action vai chamar a ação create do método POST-->
            <div class="form-group">
                <!--form-group: função do Botstrap para deixar mais bonito ajusta as margens-->
                <label asp-for="Name" class="control-label"></label> <!--label é rotulo-->
                <input asp-for="Name" class="form-control" /> <!--form-control estiliza o campo onde inserimos dados-->
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" /> <!--Botao para enivar "submit" o formulário-->
            </div>
        </form>
    </div>
</div>
